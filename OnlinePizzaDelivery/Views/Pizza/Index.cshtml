@using OnlinePizzaDelivery_Models;
@using OnlinePizzaDelivery_Utility;
@model IEnumerable<Pizza>

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Photo
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Size
                    </th>
                    <th>
                        Ingredients
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width ="20%">
                            <img src="@WC.ImagePath@obj.Image" class="w-100" style="border-radius:5px; border:1px solid #bbb" />
                    </td>
                    <td width="20%">@obj.Name</td>
                    <td width="5%">@obj.Size cm</td>
                    <td width="20%">@obj.Ingredients</td>
                    <td width="10%">@obj.Price</td>
                    <td width="20%">@obj.Category.Name</td>
                        <td class="text-center" role="group">
                            <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                <i class="fa-solid fa-pen-to-square"></i> &nbsp; Edit
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="fa-regular fa-trash-can"></i> &nbsp; Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No product exists</p>
    }
</div>
